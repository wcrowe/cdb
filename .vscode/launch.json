{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug dbview",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/dbview",
            "args": [
                "-f", "mynewdb.db",
                "-n"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "Debug with add employee",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/dbview",
            "args": [
                "-f", "mynewdb.db",
                "-a", "John Doe,123 Main St,40",
                "-l"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}